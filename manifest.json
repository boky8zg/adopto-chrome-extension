{
    "manifest_version": 2,
    "name": "Adopto",
    "version": "0.9",

    "description": "Adopto extension",
    "icons": {
        "16": "icon/icon_16.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },

    "author": "Bojan Do≈°en, Adopto LTD",
    /* "key": "", */
    "permissions": [
        "tabs",
        "https://adopto.eu/*",
        "https://*.facebook.com/*",
        "https://*.twitter.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.facebook.com/*", "https://*.twitter.com/*"],
            "css": ["css/font-awesome.css", "css/sidebar.css"],
            "js": ["js/jquery.min.js"]
        }
    ],
    "web_accessible_resources" : [
        "*.json",
        "*.js",
        "*.png",
        "*.html",
        "*.eot",
        "*.woff2",
        "*.ttf"
    ],

    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_title": "",
        "default_icon": "icon/icon_19.png"
    }
}
