{
    "manifest_version": 2,
    "name": "Adopto",
    "version": "1.0",

    "description": "Adopto extension",
    "icons": {
        "16": "icon/icon_16.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },

    "author": "Bojan Do≈°en, AdoptoTech LTD",
    /* "key": "", */
    "permissions": [
        "tabs",
        "https://adopto.eu/*",
        "https://*.facebook.com/*",
        "https://github.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.facebook.com/*"],
            "css": ["css/sidebar.css"],
            "js": ["js/jquery.min.js"]
        }
    ],
    "web_accessible_resources" : [
        "*.png",
        "*.html"
    ],

    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_title": "",
        "default_icon": "icon/icon_19.png"
    }
}
