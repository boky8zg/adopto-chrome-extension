{
    "manifest_version": 2,
    "name": "Adopto Hire Extension",
    "version": "0.9",

    "description": "Source candidates to your Adopto account with a single click.",
    "icons": {
        "16": "icon/icon_16.png",
        "48": "icon/icon_48.png",
        "128": "icon/icon_128.png"
    },

    "author": "Bojan Do≈°en, Adopto LTD",
    "permissions": [
        "tabs",
        "https://*.adopto.eu/*",

        "https://*.facebook.com/*",
        "https://*.fb.com/*",
        "https://*.linkedin.com/*",
        "https://*.twitter.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.facebook.com/*",
                "https://*.fb.com/*",
                "https://*.linkedin.com/*",
                "https://*.twitter.com/*"
            ],
            "css": ["css/font-awesome.css", "css/sidebar.css"],
            "js": ["js/jquery.min.js", "js/profile-scripts.js", "js/adopto.js"]
        }
    ],
    "web_accessible_resources" : [
        "*.json",
        "*.js",
        "*.png",
        "*.html",
        "*.eot",
        "*.woff2",
        "*.ttf"
    ],

    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_title": "",
        "default_icon": "icon/icon_19.png"
    },
    "homepage_url": "https://adopto.eu/"
}
